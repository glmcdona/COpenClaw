# ── Core ──────────────────────────────────────────────
COPILOT_CLAW_LOG_LEVEL=info
COPILOT_CLAW_DATA_DIR=
COPILOT_CLAW_LOG_DIR=
COPILOT_CLAW_CLEAR_LOGS_ON_LAUNCH=false
COPILOT_CLAW_HOST=127.0.0.1
COPILOT_CLAW_PORT=18790

# ── GitHub Copilot CLI ────────────────────────────────
COPILOT_CLI_PATH=copilot
COPILOT_CLAW_CLI_TIMEOUT=7200
COPILOT_CLAW_WORKSPACE_DIR=
# API-first backend for prompt/session execution: "api" or "cli"
COPILOT_CLAW_COPILOT_EXECUTION_BACKEND=api
# Enable Copilot autopilot mode by default (set false to disable globally)
COPILOT_CLAW_COPILOT_AUTOPILOT_DEFAULT=true
# Allow explicit fallback to CLI subprocess execution when API backend is unavailable
COPILOT_CLAW_COPILOT_ALLOW_CLI_FALLBACK=true

# ── Task watchdog ────────────────────────────────────
COPILOT_CLAW_TASK_WATCHDOG_INTERVAL=60
COPILOT_CLAW_TASK_WATCHDOG_GRACE_SECONDS=600
COPILOT_CLAW_TASK_WATCHDOG_IDLE_WARN_SECONDS=1800
COPILOT_CLAW_TASK_WATCHDOG_IDLE_RESTART_SECONDS=3600
COPILOT_CLAW_TASK_WATCHDOG_MAX_RESTARTS=1
COPILOT_CLAW_TASK_PROGRESS_REPORT_INTERVAL_SECONDS=900

# ── Telegram ──────────────────────────────────────────
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_SECRET=
TELEGRAM_ALLOW_FROM=
TELEGRAM_OWNER_CHAT_ID=

# ── Microsoft Teams ───────────────────────────────────
MSTEAMS_APP_ID=
MSTEAMS_APP_PASSWORD=
MSTEAMS_TENANT_ID=
MSTEAMS_ALLOW_FROM=
MSTEAMS_VALIDATE_TOKEN=true

# ── Microsoft Teams (auto-provisioning, optional) ─────
MSTEAMS_ADMIN_TENANT_ID=
MSTEAMS_ADMIN_CLIENT_ID=
MSTEAMS_ADMIN_CLIENT_SECRET=
MSTEAMS_AZURE_SUBSCRIPTION_ID=
MSTEAMS_AZURE_RESOURCE_GROUP=
MSTEAMS_AZURE_LOCATION=eastus
MSTEAMS_BOT_NAME=copenclaw-teams-bot
MSTEAMS_BOT_ENDPOINT=
MSTEAMS_APP_PACKAGE_DIR=
MSTEAMS_AUTO_SETUP=
MSTEAMS_AUTO_PUBLISH=false
MSTEAMS_AUTO_CREATE_RG=true
MSTEAMS_WRITE_ENV=

# ── WhatsApp (Business Cloud API) ─────────────────────
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_VERIFY_TOKEN=
WHATSAPP_ALLOW_FROM=

# ── Signal (via signal-cli-rest-api) ──────────────────
SIGNAL_API_URL=
SIGNAL_PHONE_NUMBER=
SIGNAL_ALLOW_FROM=

# ── Slack ─────────────────────────────────────────────
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=
SLACK_ALLOW_FROM=

# ── Execution policy ─────────────────────────────────
# Allow all commands by default; set false to enforce COPILOT_CLAW_ALLOWED_COMMANDS.
COPILOT_CLAW_ALLOW_ALL_COMMANDS=true
COPILOT_CLAW_ALLOWED_COMMANDS=
COPILOT_CLAW_DENIED_COMMANDS=shutdown,reboot,format
COPILOT_CLAW_EXEC_TIMEOUT=300

# ── Rate limiting ────────────────────────────────────
COPILOT_CLAW_WEBHOOK_RATE_LIMIT_CALLS=30
COPILOT_CLAW_WEBHOOK_RATE_LIMIT_SECONDS=60

# ── MCP server token (optional, protects /mcp/* routes)
COPILOT_CLAW_MCP_TOKEN=
